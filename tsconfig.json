{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "es2015"
        ],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "webpack",
        "src/setupTests.ts"
    ]
}